{
  "name": "template-cli",
  "version": "1.0.0",
  "description": "CLI tool to scaffold TypeScript monorepos with pnpm workspaces, including web (TanStack Start), server (Hono), and database (Drizzle) templates",
  "keywords": [
    "cli",
    "template",
    "monorepo",
    "pnpm",
    "typescript",
    "tanstack",
    "hono",
    "drizzle"
  ],
  "author": "Michael Corrigan <mcorrigan89@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcorrigan89/template-cli"
  },
  "type": "module",
  "bin": {
    "create-my-template": "./bin/index.js"
  },
  "files": [
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "pnpm --color --parallel --filter './templates/*' dev",
    "lint": "pnpm --color --parallel --filter './templates/*' lint",
    "start": "node bin/index.js",
    "prepare": "tsc",
    "prepare-templates": "node scripts/prepare-templates.js",
    "prepublishOnly": "npm run prepare-templates && npm run build",
    "dev:server": "pnpm --filter=server dev",
    "dev:web": "pnpm --filter=web dev",
    "dev:db": "pnpm --filter=database dev",
    "build:server": "pnpm --filter=server build",
    "build:web": "pnpm --filter=web build",
    "build:db": "pnpm --filter=database build"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "typescript": "6.0.0-beta"
  }
}
