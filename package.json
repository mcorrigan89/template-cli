{
  "name": "template-cli",
  "version": "1.0.0",
  "description": "CLI tool to scaffold TypeScript monorepos with pnpm workspaces, including web (TanStack Start), server (Hono), and database (Drizzle) templates",
  "keywords": [
    "cli",
    "template",
    "monorepo",
    "pnpm",
    "typescript",
    "tanstack",
    "hono",
    "drizzle"
  ],
  "author": "Michael Corrigan <mcorrigan89@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcorrigan89/template-cli"
  },
  "type": "module",
  "bin": {
    "create-my-template": "./bin/index.js"
  },
  "files": ["bin", "templates"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "tsc",
    "prepare-templates": "node scripts/prepare-templates.js",
    "prepublishOnly": "npm run prepare-templates && npm run build"
  },
  "dependencies": {
    "prompts": "^2.4.2",
    "fs-extra": "^11.1.1",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.0"
  }
}