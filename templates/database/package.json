  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@template/env": "workspace:*",
    "@types/node": "25.2.3",
    "@types/pg": "8.16.0",
    "@typescript-eslint/eslint-plugin": "8.55.0",
    "@typescript-eslint/parser": "8.55.0",
    "dotenv-cli": "11.0.0",
    "drizzle-kit": "0.31.9",
    "eslint": "10.0.0",
    "prettier": "3.8.1",
    "tsx": "4.21.0",
    "typescript": "6.0.0-beta",
    "typescript-eslint": "8.55.0"
